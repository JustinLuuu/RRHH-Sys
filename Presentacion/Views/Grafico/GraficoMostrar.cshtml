<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>

@{
    ViewBag.Title = "GraficoMostrar";
}

<br />
<br />

<div id="chartContainer" style="min-height:460px; min-width:0px; margin: auto;">

    <script>
window.onload = function () {

var chart = new CanvasJS.Chart("chartContainer", {
	animationEnabled: true,
	theme: "dark2", // "light1", "light2", "dark1", "dark2"
	title: {
		text: "Departamentos"
	},
	subtitles: [{
		text: "",
		fontSize: 18
	}],
	axisY: {
		title: ".",
		logarithmic: false
	},
	data: [{
		type: "bar",
		indexLabelFontColor: "white",
		indexLabel: "{y}",
		indexLabelFontSize: 20,
		yValueFormatString: "",
		toolTipContent: "<b>{label} : {y}</b> empleados",
		dataPoints:  @Html.Raw(ViewBag.DataPoints)
	}]
});
chart.render();

}
    </script>
</div>




