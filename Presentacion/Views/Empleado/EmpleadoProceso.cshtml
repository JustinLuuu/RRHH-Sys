                                            <i class="fa fa-building" aria-hidden="true"></i>
                                        </span>
                                        @Html.DropDownListFor(n => n.Departamento_Id, ViewData["DropDownListDepartamentosInsert"] as List<SelectListItem>, "DEPARTAMENTOS",
